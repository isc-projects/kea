fi
shift

# Ok, let's process parameters (if there are any)
while [ ! -z "${1}" ]
do
    option=${1}
    case ${option} in
        # Specify server address
        -s|--server)
            shift
            db_server_address=${1}
            if [ -z ${db_server_address} ]; then
                log_error "-s or --server requires a parameter"
                usage
