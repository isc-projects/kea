    \"Dhcp6\":
    {
        \"control-sockets\": [
        {
            \"socket-type\": \"http\",
            \"socket-address\": \"127.0.0.1\",
            \"socket-port\": 8081,
            \"authentication\":
            {
                \"type\": \"basic\",
                \"realm\": \"ISC.ORG\",
