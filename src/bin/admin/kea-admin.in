    for script in ${scripts_dir}/pgsql/upgrade*.sh
    do
        echo "Processing $script file..."
        sh ${script} -U ${db_user} -h ${db_host} -d ${db_name}
    done

    version=`pgsql_version`
    printf "Lease DB version reported after upgrade: $version\n"
    exit 0
}

